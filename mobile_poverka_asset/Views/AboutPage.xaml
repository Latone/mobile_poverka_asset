<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="mobile_poverka_asset.Views.AboutPage"
             xmlns:vm="clr-namespace:mobile_poverka_asset.ViewModels"
             Title="{Binding Title}">
    
    <ContentPage.BindingContext>
        <vm:AboutViewModel />
    </ContentPage.BindingContext>
    
    <Grid
                HorizontalOptions="FillAndExpand"
              VerticalOptions="FillAndExpand"
               RowSpacing="0"
               ColumnSpacing="0"
               Margin="10"
        RowDefinitions = "20,160,110,50,80" 
            ColumnDefinitions = "160,160,20,80,80,80,20">
        <Button IsEnabled="{Binding Button_Connect}" Grid.Row="1" Grid.Column ="1"  Grid.RowSpan ="1" Text="Подключение к БД" Clicked="ConnectDBButton_Clicked" VerticalOptions="Start"/>
        <Label Grid.Row="1" 
                   Grid.Column ="0"
                   Grid.RowSpan ="2"
                   Grid.ColumnSpan ="1"
                   Text="{Binding ConnectionStatus}" 
                   FontSize="16"
                   HorizontalOptions="Start"
                   FontFamily="serif"
                   VerticalOptions="Start"
                   Padding="20,0,0,0"/>
    </Grid>

</ContentPage>
