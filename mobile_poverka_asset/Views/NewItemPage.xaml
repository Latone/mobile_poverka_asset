<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="mobile_poverka_asset.Views.NewItemPage"
             Shell.PresentationMode="ModalAnimated"
             Title="New Item"
             xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
             ios:Page.UseSafeArea="true">
    <ContentPage.Content>
        <StackLayout Spacing="3" Padding="15">
            <Label Text="Серийный номер:" FontSize="Medium" />
            <Entry x:Name="TopEntry" ReturnType="Next"  Text="{Binding Serial, Mode=TwoWay}" FontSize="Medium" Keyboard="Numeric"/>
            <Label  Text="ID канала:" FontSize="Medium" />
            <Editor x:Name="BottomEntry" Text="{Binding IDchannel, Mode=TwoWay}" AutoSize="TextChanges" Keyboard="Numeric" FontSize="Medium" Margin="0" />
            <StackLayout Orientation="Horizontal">
                <Button Text="Назад" Command="{Binding CancelCommand}" HorizontalOptions="FillAndExpand"></Button>
                <Button Clicked="Next_Entry_Clicked" Text="Сохранить" Command="{Binding SaveCommand}" HorizontalOptions="FillAndExpand"></Button>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
    
</ContentPage>
